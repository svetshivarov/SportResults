<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/rl"
    android:background="@color/light_blue">

    <TextView
        android:id="@+id/SportResultsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Welcome"
        android:layout_centerInParent="true"
        android:text="SPORT RESULTS"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="WELCOME!"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/basketballImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@id/SportResultsTitle"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/basketball" />

    <Button
        android:id="@+id/FootballButton"
        android:layout_width="115dp"
        android:layout_height="55dp"
        android:layout_below="@id/Welcome"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Football" />

    <Button
        android:id="@+id/BasketballButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/FootballButton"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Basketball" />

</RelativeLayout>